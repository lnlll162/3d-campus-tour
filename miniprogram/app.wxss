/* 3D校园小程序全局样式 */

/* 重置样式 */
/* 小程序WXSS不支持通配符选择器，使用page重置 */
page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 全局样式变量 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', STHeiti, 'Microsoft Yahei', sans-serif;
}

/* web-view样式 */
web-view {
  width: 100%;
  height: 100vh;
  border: none;
}

/* 按钮样式 */
.btn {
  border-radius: 6px;
  font-size: 16px;
  line-height: 1.4;
  text-align: center;
  border: none;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-primary {
  background-color: #07c160;
  color: #fff;
}

.btn-primary:active {
  background-color: #06a552;
  transform: scale(0.95);
}

.btn-secondary {
  background-color: #f8f8f8;
  color: #333;
  border: 1px solid #e5e5e5;
}

.btn-secondary:active {
  background-color: #e5e5e5;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

/* 加载样式 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 40px 20px;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 2px solid #f3f3f3;
  border-top: 2px solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 12px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #666;
  font-size: 14px;
}

/* 错误提示 */
.error {
  background-color: #fff2f0;
  border: 1px solid #ffccc7;
  color: #ff4d4f;
  padding: 12px 16px;
  border-radius: 6px;
  margin: 16px;
}

.error-icon {
  margin-right: 8px;
}

/* 浮动控制面板 */
.control-panel {
  position: fixed;
  top: 20px;
  right: 16px;
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  padding: 16px;
  z-index: 1000;
  max-width: 280px;
}

.control-panel h3 {
  margin: 0 0 12px 0;
  color: #333;
  font-size: 16px;
  font-weight: 600;
}

.control-panel .control-group {
  margin-bottom: 12px;
}

.control-panel label {
  display: block;
  margin-bottom: 4px;
  font-size: 14px;
  color: #666;
}

/* 信息面板 */
.info-panel {
  position: fixed;
  bottom: 20px;
  left: 16px;
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  padding: 16px;
  z-index: 1000;
  max-width: 280px;
}

.info-panel h4 {
  margin: 0 0 8px 0;
  color: #333;
  font-size: 14px;
  font-weight: 600;
}

.info-panel p {
  margin: 0 0 8px 0;
  font-size: 13px;
  color: #666;
  line-height: 1.4;
}

/* 建筑选择提示 */
.building-tooltip {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 8px 12px;
  border-radius: 6px;
  font-size: 14px;
  pointer-events: none;
  z-index: 2000;
  transform: translate(-50%, -100%);
  margin-top: -8px;
}

.building-tooltip::after {
  content: '';
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  border: 5px solid transparent;
  border-top-color: rgba(0, 0, 0, 0.8);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .control-panel {
    top: 10px;
    right: 10px;
    left: 10px;
    max-width: none;
  }

  .info-panel {
    bottom: 10px;
    left: 10px;
    right: 10px;
    max-width: none;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .control-panel,
  .info-panel {
    background-color: rgba(0, 0, 0, 0.9);
    color: white;
  }

  .control-panel h3,
  .info-panel h4 {
    color: white;
  }

  .control-panel label,
  .info-panel p {
    color: #ccc;
  }
}